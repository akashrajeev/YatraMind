# KMRL Operations Dashboard Environment Configuration

# API Configuration
API_KEY=your-secret-api-key-here
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/kmrl_operations
INFLUXDB_URL=https://your-influxdb-instance.com
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=kmrl_metrics

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# MQTT Configuration (for IoT sensor data)
MQTT_BROKER=your-mqtt-broker.com
MQTT_PORT=8883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_USE_TLS=true

# Google Sheets Integration
CLEANING_SHEET_URL=https://docs.google.com/spreadsheets/d/your-sheet-id/edit
GOOGLE_CREDENTIALS_FILE=path/to/credentials.json

# Notification Services
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/kmrl_operations.log

# Development Configuration
DEBUG=true
ENVIRONMENT=development

# Production Configuration
# DEBUG=false
# ENVIRONMENT=production
